{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "g++",
			"args": [
				"-g",
				"src/*.cpp",
				"src/graphics/*.cpp",
				"-o",
				"ProjektProgram",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system",
				"-std=c++17"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}